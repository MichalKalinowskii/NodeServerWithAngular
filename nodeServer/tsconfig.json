{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSourceMap": false,        
    "inlineSources": false,         
    "sourceRoot": "",                
    "mapRoot": "",                   
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}